<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".autorization.loginfragments.PassAndBioFragment">

    <TextView
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="200dp"
        android:text="Введите пароль для: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/email_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_toEndOf="@+id/pass"
        android:text="email"
        android:textColor="#000000"
        android:textSize="20sp" />
    
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_user"
        android:layout_marginHorizontal="60sp"
        android:layout_marginTop="45dp"
        android:background="@color/teal_700"
        android:ems="10"
        android:gravity="center"
        android:hint="Введите пароль"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:minHeight="48dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/log"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="10dp"
        android:backgroundTint="#4CAF50"
        android:text="Войти"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/bio"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/log"
        android:layout_alignEnd="@+id/password"
        android:backgroundTint="#FF9800"
        android:src="?android:attr/fingerprintAuthDrawable"/>

</RelativeLayout>